{
  "manifest_version": 3,
  "name": "Tab Navi",
  "version": "0.0.2",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "description": "Tab manager and navigator.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "tabGroups",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
